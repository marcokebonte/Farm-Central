    body {
        background-color: #f9f5eb;
        font-family: Arial, sans-serif;
    }

    main {
        padding: 20px;
        max-width: 800px;
        margin: 0 auto;
    }

    h2 {
        color: #582c0d;
        margin-bottom: 10px;
    }

    hr {
        border-color: #734022;
    }

    .row {
        margin-bottom: 20px;
    }

    .col-form-label {
        color: #582c0d;
    }

    .form-control {
        border-radius: 5px;
        border-color: #582c0d;
    }

    .checkbox label {
        color: #582c0d;
    }

    .btn {
        background-color: #734022;
        color: #fff;
