@model IEnumerable<Farm_Central.Models.product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


@using (Html.BeginForm("Index", "products", FormMethod.Get))
{
    <div>
        <label>Filter:</label>
        @Html.DropDownList("filterBy", new SelectList(new Dictionary<string, string>
        {
            {"All", "All"},
            {"Type", "Type"},
            {"Date", "Date"},
            {"Farm", "Farm"}
        }, "Value", "Key"), "All")
        <input type="text" name="searchString" placeholder="Search" />
        <input type="submit" value="Filter" />
    </div>
}

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Type
        </th>
        <th>
            Price in R
        </th>
        <th>
            Date Range
        </th>
        <th>
            Farm Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date_range)
            </td>
            <td>
                @Html.ActionLink(item.farm.name, "Details", "farm", new { id = item.farm_id }, null)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.product_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.product_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.product_id })
            </td>
        </tr>
    }
</table>




